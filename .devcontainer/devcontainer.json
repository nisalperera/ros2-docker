{
  "name": "ROS 2 desktop-full",
  // "dockerFile": "Dockerfile",
  "runArgs": [
    "--network=host",
    "--ipc=host",
    "-e QT_X11_NO_MITSHM=1",
    "--volume=/tmp/.X11-unix:/tmp/.X11-unix",
    "--gpus=all",
    "--device-cgroup-rule=c 13:* rmw",
    "--name=ROS2-humble"
  ],
  "workspaceFolder": "/home/ubuntu/projects",
  "workspaceMount": "source=${localWorkspaceFolder}/projects,target=/home/ubuntu/projects,type=bind",
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.bash_history,target=/home/ubuntu/.bash_history,type=bind",
    "source=${localWorkspaceFolder}/gazebo_models_worlds_collection/models,target=/home/ubuntu/gazebo/models,type=bind",
    "source=${localWorkspaceFolder}/gazebo_models_worlds_collection/worlds,target=/home/ubuntu/gazebo/worlds,type=bind",
    "source=${localWorkspaceFolder}/remove.sh,target=/home/ubuntu/projects/remove.sh,type=bind",
    "source=${localWorkspaceFolder}/setup.sh,target=/home/ubuntu/projects/setup.sh,type=bind",
    "source=${localWorkspaceFolder}/.ros,target=/home/ubuntu/.ros,type=bind",
    "source=/dev/dri,target=/dev/dri,type=bind",
    "source=/dev/input,target=/dev/input,type=bind"
  ],
  "postCreateCommand": "chmod +x setup.sh && bash setup.sh",
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile",
    "args": {
      "ROS_DISTRO": "humble",
      "PACKAGES": "mobile_robot",
      "CUDA": "false"
    },
    "tag": "ros2-humble"
  },
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "ms-vscode.makefile-tools",
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.debugpy"
      ]
    }
  },
  "containerEnv": {
    "DISPLAY": "${localEnv:DISPLAY}"
  },
  "remoteEnv": {
    "DOCKER_BUILDKIT": "0"
  }
}